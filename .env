# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

JWT_SECRET="your-secret-key-here"
DATABASE_URL="mysql://root:password@localhost:3306/codespring"
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-specific-password"
SMTP_FROM="noreply@codespring.com"
FRONTEND_URL="http://localhost:5173"

# Stripe Configuration (Replace with your actual Stripe publishable key from your Stripe Dashboard)
VITE_STRIPE_PUBLIC_KEY="pk_test_your_publishable_key_here"

PORT=5000
VITE_API_URL=http://localhost:5000/api

# Client URL
CLIENT_URL="http://localhost:5173"

# File Upload
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=5242880