{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "target": "ESNext",
    "lib": ["ESNext"]
  },
  "include": [
    "vite.config.ts",
    "src/server/**/*.ts",
    "src/lib/**/*.ts",
    "src/types/**/*.ts",
    "src/components/**/*.ts",
    "src/components/**/*.tsx"
  ]
}
