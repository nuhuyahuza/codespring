{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/features/*": ["./src/features/*"],
      "@/features/auth/*": ["./src/features/auth/*"],
      "@/features/courses/*": ["./src/features/courses/*"],
      "@/features/instructor/*": ["./src/features/instructor/*"],
      "@/features/payment/*": ["./src/features/payment/*"]
    },
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx"
  },
  "include": [
    "vite.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}

